        self.rx_widget = QRxWidget(self)

        vbox = QVBoxLayout()
        vbox.addWidget(self.tx_widget)
        vbox.addWidget(self.rx_widget)

        self.main_frame.setLayout(vbox)
        self.setCentralWidget(self.main_frame)

